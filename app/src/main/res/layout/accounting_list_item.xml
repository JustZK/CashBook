<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageButton
        android:layout_gravity="center|left"
        android:visibility="invisible"
        android:id="@+id/accounting_item_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/delete"
        app:layout_heightPercent="7%w"
        app:layout_widthPercent="7%w" />

    <TextView
        android:visibility="invisible"
        android:gravity="center|right"
        android:paddingRight="10dp"
        android:id="@+id/accounting_item_income"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%w"
        app:layout_widthPercent="35%" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="20%w"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/accounting_item_node"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/node" />

        <ImageView
            android:id="@+id/accounting_item_status"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/e_apparel_s" />

    </com.zhy.android.percent.support.PercentRelativeLayout>



    <TextView
        android:visibility="invisible"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:id="@+id/accounting_item_expenditure"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%w"
        app:layout_widthPercent="35%" />

    <ImageButton
        android:layout_gravity="center|right"
        android:visibility="invisible"
        android:id="@+id/accounting_item_modify"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/modify"
        app:layout_heightPercent="7%w"
        app:layout_widthPercent="7%w" />

</com.zhy.android.percent.support.PercentLinearLayout>
