<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|bottom"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape"
            android:text="@string/add_budget"
            android:textSize="@dimen/s"
            app:layout_heightPercent="65%"
            app:layout_widthPercent="30%" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="28%"
        app:layout_widthPercent="100%"
        android:orientation="vertical"
        android:gravity="center">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center|top"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="100%">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                app:layout_heightPercent="78%"
                app:layout_widthPercent="100%">

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/frame_right"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_heightPercent="100%"
                    app:layout_widthPercent="50%">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="40dp"
                        android:text="本月收入" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        android:paddingRight="40dp"
                        android:text="10086"
                        android:textColor="@color/black"
                        android:textSize="@dimen/xl" />

                </com.zhy.android.percent.support.PercentLinearLayout>


                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_heightPercent="100%"
                    app:layout_widthPercent="50%">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="40dp"
                        android:text="本月支出" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="20dp"
                        android:paddingLeft="40dp"
                        android:text="10010"
                        android:textColor="@color/black"
                        android:textSize="@dimen/xl" />

                </com.zhy.android.percent.support.PercentLinearLayout>

            </com.zhy.android.percent.support.PercentLinearLayout>

            <ImageView
                android:id="@+id/accounting_write_iv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                app:layout_heightPercent="26%w"
                app:layout_widthPercent="26%w"
                app:srcCompat="@drawable/write" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.main.zk.cashbook.ui.PullRefreshListView
        android:id="@+id/accounting_lv"
        android:divider="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="62%"
        app:layout_widthPercent="90%">
    </com.main.zk.cashbook.ui.PullRefreshListView>

</com.zhy.android.percent.support.PercentLinearLayout>
