<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/accounting_expenditure_list_item_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="80%w"
        app:layout_widthPercent="80%w"
        app:srcCompat="@drawable/e_food"/>

    <TextView
        android:id="@+id/accounting_expenditure_list_item_tv"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%w"
        app:layout_widthPercent="80%w" />

</com.zhy.android.percent.support.PercentLinearLayout>
